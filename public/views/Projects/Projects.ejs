    <h2>แสดงรายการ Projects ทั้งหมด</h2>
    <table>
        <tr>
          <th>ProjectID</th>
          <th>Name</th>
          <th>DepartmentID</th>
          <th>Action</th>
        </tr>
        
        <tr>
          <% for(var i = 0; i < Projects.length; i++) { %>
          <td><%= Projects[i].ProjectID  %></td>
          <td><%= Projects[i].Name  %></td> 
          <td><%= Projects[i].DepartmentID  %></td>
          <td>
            <a href="http://localhost:5500/Projects/<%= Projects[i].ProjectID  %>">Detail</a>
            <a href="http://localhost:5500/Project/update/<%= Projects[i].ProjectID %>">Edit</a>
            <a href="http://localhost:5500/Projects/delete/<%= Projects[i].ProjectID %>">Delete</a>

          </td>
        </tr>
        <% } %>
    </table>
    <a href="http://localhost:5500/Project/create/">Create Projects</a>

</body>
